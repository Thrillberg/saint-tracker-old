<%= render 'shared/errors', obj: @work %>

<div class='well'>
  <%= form_for @work do |f| %>
    <div class='control-group'>
      <%= f.label :title %>
      <div class='quiet'><small>Please enter the title of the work.</small></div>
      <%= f.text_field :title %>
    </div>
    <div class='control-group'>
      <%= f.label :date %>
      <div class='quiet'><small>Please enter the date the work was created.</small></div>
      <%= f.text_field :date %>
    </div>
    <div class='control-group'>
      <%= f.label :city %>
      <small><div class='quiet'>Please enter the city in which the work was created.</div></small>

      <%= f.text_field :city %>
    </div>
    <div class='control-group'>
      <%= f.label :artist %>
      <%= f.collection_select :artist_id, Artist.all, :id, :name, :prompt => true %>
      <br/>
      <p>
      <small><div class='quiet'>If the artist isn't here, please submit a new artist.</div></small>
      <%= link_to(new_artist_path) do %>
          <button type="button" class="btn btn-default"><i class='icon-plus'></i> New Artist</button>
        <% end %>
      </p>
    </div>

    <div class='control-group'>
      <%= f.label :image_URL %>
      <small><div class='quiet'>Please enter the exact URL below, preferably a high resolution image.</div></small>

      <%= f.text_field :image %>
    </div>

    <div class='control-group'>
      <%= f.label "Saints" %>
      <small><div class='quiet'>Which saints appear in the work? If the saint isn't here, please submit a new saint below.</div></small>

      <%= f.collection_check_boxes :saint_ids, Saint.all, :id, :name do |cb| %>
        <% cb.label(class: "checkbox inline") {cb.check_box(class: "checkbox") + cb.text} %>
      <% end %>
    </div>
      <p>
      <%= link_to(new_saint_path) do %>
          
          <button type="button" class="btn btn-default"><i class='icon-plus'></i> New Saint</button>
        <% end %>
      </p>
      <br/>
      <%= f.submit(@work.new_record? ? 'Add Work of Art' : 'Update Work of Art', class: 'btn btn-success') %>
    <% end %>
</div>